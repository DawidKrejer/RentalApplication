@model List<RentalApplication.Models.Car>

<h2>Car List</h2>

<a asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Car ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarId</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.CarId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@car.CarId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@car.CarId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
